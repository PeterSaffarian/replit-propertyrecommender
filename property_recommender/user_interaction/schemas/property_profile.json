{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Property Preference Profile",
  "description": "Schema for collecting user preferences for property recommendations.",
  "type": "object",
  "properties": {
    "location": {
      "type": "string",
      "description": "Preferred suburb, city, or region"
    },
    "price_min": {
      "type": "number",
      "description": "Minimum price in NZD"
    },
    "price_max": {
      "type": "number",
      "description": "Maximum price in NZD"
    },
    "bedrooms_min": {
      "type": "integer",
      "description": "Minimum number of bedrooms"
    },
    "bathrooms_min": {
      "type": "integer",
      "description": "Minimum number of bathrooms"
    },
    "pet_friendly": {
      "type": "boolean",
      "description": "Whether the property must be pet-friendly"
    },
    "open_homes": {
      "type": "boolean",
      "description": "Whether upcoming open homes are required"
    },
    "move_in_date": {
      "type": "string",
      "format": "date",
      "description": "Desired move-in date (YYYY-MM-DD)"
    }
  },
  "required": [
    "location",
    "price_min",
    "price_max",
    "bedrooms_min",
    "bathrooms_min"
  ],
  "additionalProperties": false
}
