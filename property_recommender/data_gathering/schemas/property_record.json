{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Property Record",
  "description": "A normalized representation of a Trade Me property listing.",
  "type": "object",
  "properties": {
    "id": {
      "type": ["string", "integer"],
      "description": "Unique identifier for the listing (e.g. ListingId)."
    },
    "title": {
      "type": "string",
      "description": "The listing title."
    },
    "price": {
      "type": "number",
      "description": "The main listing price (e.g., StartPrice or BuyNowPrice)."
    },
    "bedrooms": {
      "type": "integer",
      "description": "Number of bedrooms."
    },
    "bathrooms": {
      "type": "integer",
      "description": "Number of bathrooms."
    },
    "region": {
      "type": "string",
      "description": "Name of the region (e.g. Auckland)."
    },
    "suburb": {
      "type": "string",
      "description": "Name of the suburb."
    },
    "latitude": {
      "type": "number",
      "description": "Latitude coordinate of the property."
    },
    "longitude": {
      "type": "number",
      "description": "Longitude coordinate of the property."
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "Direct URL to the listing on Trade Me."
    },
    "picture_href": {
      "type": "string",
      "format": "uri",
      "description": "URL of the main property image."
    },
    "open_homes": {
      "type": "array",
      "description": "List of upcoming open-home events.",
      "items": {
        "type": "object",
        "properties": {
          "start": {
            "type": "string",
            "format": "date-time",
            "description": "Open-home start time (ISO 8601)."
          },
          "end": {
            "type": "string",
            "format": "date-time",
            "description": "Open-home end time (ISO 8601)."
          }
        },
        "required": ["start", "end"],
        "additionalProperties": false
      }
    },
    "attributes": {
      "type": "object",
      "description": "Additional listing attributes (e.g., parking, floor area)."
    }
  },
  "required": [
    "id",
    "title",
    "price",
    "bedrooms",
    "bathrooms",
    "suburb",
    "latitude",
    "longitude",
    "url"
  ],
  "additionalProperties": false
}
